<body>
    <div style = "text-align: center">
        <span id="clock_1">:</span>

    </div>
    <script type="text/javascript">
        function Clock(){
            var NowTime = new Date();
            document.getElementById("clock_1").innerHTML= NowTime.toLocaleString();
        }
        setInterval(Clock,1000);
    </script>
    <div style="text-align:center">
        <span id="clock_h">:</span>
        <span id="clock_m">:</span>
        <span id="clock_s">:</span>
    </div>
    <script type="text/javascript">
        var s = 0;
        var m = 0;
        var h = 0;
        function clock(){
            s += 1;
            if(s>=60){
                m+=1;
                s=0;
            }
            if(m>=60){
                h+=1;
                m=0;
            }
            document.getElementById("clock_h").innerText = h + "时";
            document.getElementById("clock_m").innerText = m + "分";
            document.getElementById("clock_s").innerText = s + "秒";

        }
        setInterval(clock,1000);
    </script>
    <div style="text-align: center">
        <span>距离2018/12/12/24/00：00 还有：</span>
        <span id="djs_d">:</span>
        <span id="djs_h">:</span>
        <span id ="djs_m">:</span>
        <span id ="djs_s">:</span>
    </div>
    <script type="text/javascript">
        function getRTime(){
            var EndTime = new Date('2018/12/24 00:00:00');
            var NowTime = new Date();
            var t =EndTime.getTime() - NowTime.getTime();

            var d = Math.floor(t/1000/60/60/24);
            var h =Math.floor(t/1000/60/60%24);
            var m =Math.floor(t/1000/60%60);
            var s=Math.floor(t/1000%60);
            document.getElementById("djs_d").innerText = d +"天";
            document.getElementById("djs_h").innerText = h + "时";
            document.getElementById("djs_m").innerText = m + "分";
            document.getElementById("djs_s").innerText = s + "秒";
        }
        setInterval(getRTime,1000);
    </script>
</body>
